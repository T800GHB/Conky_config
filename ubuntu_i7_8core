background yes
use_xft yes
xftfont Monospace:size=9
xftalpha 0.8
out_to_console no
total_run_times 0
border_width 1
cpu_avg_samples 4
net_avg_samples 2
default_color black
default_outline_color white
default_shade_color black
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
alignment top_right
gap_x 5
gap_y 10
minimum_size 300 700
double_buffer yes
out_to_stderr no
extra_newline no
own_window yes
own_window_type normal
own_window_hints undecorated,below,sticky,skip_taskbar,skip_page
own_window_transparent yes
stippled_borders 0
update_interval 1.0
uppercase no
use_spacer no
show_graph_scale no
show_graph_range no
maximum_width 300 

